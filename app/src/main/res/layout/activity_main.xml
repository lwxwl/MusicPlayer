<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main">

    <!-- Change color without reload app -->
    <com.bilibili.magicasakura.widgets.TintToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/newColorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?android:attr/actionBarSize"
        app:contentInsetStart="0.0dp"
        app:layout_scrollFlags="enterAlways|scroll"
        >
        
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">
            
            <ImageView
                android:id="@+id/toolbar_discover"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="@drawable/toolbar_discover"
                android:layout_toLeftOf="@+id/toolbar_music"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/toolbar_music"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="@drawable/toolbar_music"
                android:layout_centerInParent="true"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/toolbar_friends"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="@drawable/toolbar_friends"
                android:layout_toRightOf="@id/toolbar_music"
                android:clickable="true"
                />

        </RelativeLayout>

    </com.bilibili.magicasakura.widgets.TintToolbar>

   <com.example.lwxwl.musicplayer.widget.CustomViewPager
       android:id="@+id/main_viewpager"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/toolbar"
       />
       <!--android:layout_above="@+id/nav_play"-->


    <FrameLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
